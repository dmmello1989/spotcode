<section class="container">
  <section class="col-md-4 offset-md-4 text-center devise">
    <h2 class="title is-3 margin-navbar has-text-white has-text-centered vertical-spacing">Log in</h2>

    <hr />

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email, class: 'label has-text-white' %><br />
        <%= f.email_field :email, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :senha, class: 'label has-text-white' %><br />
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, class: 'has-text-white' %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Entrar", class: 'btn btn-success' %>
      </div>
    <% end %>

    <br />

    <%= render "devise/shared/links" %>
  </section>
</section>